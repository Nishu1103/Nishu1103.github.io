<style>
	body {
		background: var(--terminal-bg);
		color: var(--terminal-text);
		font-family: 'JetBrains Mono', 'Fira Code', 'Monaco', 'Consolas', monospace;
		margin: 0;
		padding: 0;
	}

	.terminal-output {
		margin-left: 0;
		margin-bottom: 1rem;
		color: var(--terminal-text);
	}

	.ascii-art {
		color: var(--terminal-accent);
		font-size: 0.8rem;
		margin: 1rem 0;
	}

	.ascii-art pre {
		margin: 0;
		font-family: inherit;
	}

	.file-list {
		margin: 0.5rem 0;
	}

	.file-item {
		display: flex;
		gap: 1rem;
		margin-bottom: 0.25rem;
		font-size: 0.9rem;
	}

	.file-type {
		color: var(--terminal-text-muted);
		width: 80px;
	}

	.file-size {
		color: var(--terminal-text-muted);
		width: 40px;
	}

	.file-date {
		color: var(--terminal-text-muted);
		width: 50px;
	}

	.file-name {
		color: var(--terminal-blue);
		cursor: pointer;
	}

	.file-name:hover {
		color: var(--terminal-blue-light);
		text-decoration: underline;
	}

	.json-output {
		background: var(--terminal-bg);
		padding: 1rem;
		border-radius: 4px;
		border: 1px solid var(--terminal-border);
		margin: 0.5rem 0;
		color: var(--terminal-text);
		font-size: 0.85rem;
		overflow-x: auto;
	}

	.connect-links {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		margin: 1rem 0;
	}

	.link {
		color: var(--terminal-blue);
		text-decoration: none;
		padding: 0.5rem 1rem;
		border: 1px solid var(--terminal-border);
		border-radius: 4px;
		background: var(--terminal-bg);
		transition: all 0.2s ease;
		font-size: 0.9rem;
	}

	.link:hover {
		background: var(--terminal-surface-alt);
		border-color: var(--terminal-blue);
		color: var(--terminal-blue-light);
	}


	.code-stats {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 2rem;
		max-width: 800px;
		margin: 3rem auto;
		padding: 0 2rem;
	}

	.stat-item {
		text-align: center;
		padding: 1.5rem;
		background: var(--terminal-surface);
		border-radius: 8px;
		border: 1px solid var(--terminal-border);
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--terminal-accent);
		margin-bottom: 0.5rem;
	}

	.stat-label {
		color: var(--terminal-text-muted);
		font-size: 0.9rem;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	@media (max-width: 768px) {
		.terminal-body {
			padding: 1rem;
			font-size: 0.85rem;
		}

		.ascii-art {
			font-size: 0.7rem;
		}

		.file-item {
			font-size: 0.8rem;
		}

		.connect-links {
			flex-direction: column;
		}

		.code-stats {
			grid-template-columns: repeat(2, 1fr);
			gap: 1rem;
		}

		.stat-number {
			font-size: 2rem;
		}
	}

	@media (max-width: 480px) {
		.code-stats {
			grid-template-columns: 1fr;
		}
	}
</style>
